#include <iostream>
using namespace std;
template<typename T> T myMax(T x, T y)
{
return (x > y)? x:y;
}
int main()
{
cout<< myMax<int>(3,7)<<endl;
cout<< myMax<double>(3.0,7.0)<<endl;
cout<< myMax<char>('g','e')<<endl;
return 0;
}
Class Template :
#include<iostream>
using namespace std;
template<typename T>
class A
{
T a;
T b;
public:
A(T x,T y)
{
a=x;
b=y;
}
void display()
{
cout<<"The value of A and B are :"<<a<<" ,"<<b<<endl;
}
};
int main()
{
A<int>d(5,8);
d.display();
return 0;
}
